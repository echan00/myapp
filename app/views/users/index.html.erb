
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= image_tag @user.image %>
      <h3><%= @user.name %></h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-9">
      
      <% if user_installed_ext? %>
        <p>This is where we show what apps the user uses</p>
        <ul>
          <li>App 1</li>
          <li>App 2</li>
          <li>App 3</li>
          <li>App 4</li>
          <li>App 5</li>
        </ul>   
      <% else %> 
        <p>Ask user to install extension</p>
      <% end %>
 
    </div>
    <div class="col-md-3">
      <div style="background-color: yellow; padding:10px;">If user signed in make them share here: show share url and easy to share twitter/linkedin urls</div>
    </div>
  </div>
</div>